- content_for :header_tags do
  %script#initial-state{:type => 'application/json'}!= json_escape(render(file: 'home/initial_state', formats: :json))
  = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react-dom.min.js', 'https://code.jquery.com/jquery-3.2.1.min.js'
  = javascript_pack_tag 'application', integrity: true

= react_component 'Mastodon', default_props, class: 'app-holder', prerender: false, id: 'react-app'
