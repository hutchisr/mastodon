- content_for :header_tags do
  :javascript
    window.STREAMING_API_BASE_URL = '#{Rails.configuration.x.streaming_api_base_url}';
    window.INITIAL_STATE = #{json_escape(render(file: 'home/initial_state', formats: :json))}
  = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/react/15.5.4/react-dom.min.js'
  = javascript_pack_tag 'application', integrity: true

= react_component 'Mastodon', default_props, class: 'app-holder', prerender: false, id: 'react-app'
